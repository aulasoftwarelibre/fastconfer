{% extends 'base.html.twig' %}

{% block content %}


<div class="row">

    {% for conference in conferences %}

    <div class="col-md-12">
        <div class="conference conference-default conference-card">
            <div class="conference-heading">
                <img src="{{ conference.image }}?name={{ conference.name }}">
            </div>
            <div class="conference-body text-center">
                <h4 class="conference-header">
                    <a href="http://{{ conference.code }}.fastconfer.dev:8000{{ path('conference_show') }}">{{ conference.name }}</a>

                </h4>
                <span class="description">{{ conference.description | slice(0, 20) }}</span>
            </div>
        </div>
    </div>

    {% endfor %}

</div>

{% endblock %}
