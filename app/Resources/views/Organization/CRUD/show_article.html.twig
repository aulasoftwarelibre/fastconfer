{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}


{% block show %}
  {{ parent() }}

    <div class="media-body" xmlns="http://www.w3.org/1999/html">
    <div class="row">
        <div class="col-md-12">Version of article:</div>
    </div>

    <table class="table table-striped table-condensed ">
        <thead>
        <tr>
            <th class="text-center">Date Send</th>
            <th class="text-center">State</th>
            <th class="text-center">Download</th>
            <th class="text-center">Comments</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                {% for articlereview in object.articleReviews %}

                    <td class="text-center" >{{ object.createAt|date("d/m/y")}}</td>

                    {% if articlereview.state== 'rejected' %}
                        <td class="text-center"><span class="label label-danger"> {{ articlereview.state}}</span></td>
                    {% else %}
                        <td class="text-center"><span class="label label-success"> {{ articlereview.state}}</span></td>
                    {% endif %}

                    <td class="text-center"><a class="btn btn-default glyphicon glyphicon-download-alt " href="{{ path('file_download',
                        {'id': articlereview.id }) }}" role="button"></a></td>

                    {% if articlereview.reviewComments | length > 0 %}
                        <td class="text-center"> <a class="btn btn-default glyphicon glyphicon-comment" href="{{ path('admin_app_reviewcomments_show',{'id': articlereview.id } ) }}"
                           role="button"> comments</a></td>
                    {% endif %}

                {% endfor %}
            </tr>
        </tbody>
    </table>

</div>


{% endblock %}