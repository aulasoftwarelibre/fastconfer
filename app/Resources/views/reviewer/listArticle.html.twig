{% extends 'base.html.twig' %}

{% block mainContent %}


    {% if app.user is null %}
        <div class="alert alert-danger text-center">
            <strong>You must be registered</strong>
        </div>


    {% else %}
        {% if review!=null %}
            <div class="row ">
            <div class="col-md-12  text-center">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">

                    <tr class="success">
                        <th class="text-center">Title</th>
                        <th class="text-center">Abstract</th>
                        <th class="text-center">keyword</th>
                        <th class="text-center">Topics</th>
                        <th class="text-center">Download</th>
                        <th class="text-center">Edit Article</th>


                    </tr>
                    {% for article in review %}
                        <tr>
                            <td>{{ article.articles.title }}</td>
                            <td>{{ article.articles.abstract }}</td>
                            <td>{{ article.articles.keyword }}</td>
                            <td>
                                {% for articleReview in article.articles.topics  %}
                                    <span class="label label-success glyphicon glyphicon-tags"> {{ articleReview.name }}</span>
                                    {% endfor %}
                            </td>
                            <td><a class="btn btn-default glyphicon glyphicon-download-alt " href="{{ path('file_download',
                                {'id': article.articles.id }) }}" role="button"></a></td>
                            <td><a class="btn btn-default glyphicon glyphicon-edit" href="{{ path('article_review',
                                {'id': article.articles.id }) }}" role="button"></a></td>


                        </tr>
                    {% endfor %}
                </table>
            </div>
        {% else %}

            <div class="alert alert-danger text-center">
                <strong>There aren't articles</strong>
            </div>
            </div>
            </div>
        {% endif %}
    {% endif %}

{% endblock %}