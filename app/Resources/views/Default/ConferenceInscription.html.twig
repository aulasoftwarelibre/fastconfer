{% extends 'base.html.twig' %}


{% block mainContent %}

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-image">
                        <img class="img-responsive" src="{{ conference.image }}?name={{ conference.name }}">
                        <span class="card-title">{{ conference.name }}</span>
                    </div>

                    <div class="card-content">
                        <p><strong> Summary: </strong>{{ conference.description }}</p>
                        <hr>
                        <strong>Topics: </strong>
                        {% for aux in conference.topics %}
                            <span class="label label-danger"> {{ aux.name }}</span>
                        {% endfor %}
                    </div>

                    <div class="card-action">
                     <a class="btn btn-default" href="{{ path('upload', {'id':inscription.id}) }}"
                           role="button">Send new article</a>
                        </div>

                    <div class="table-responsive card-action">
                    <table class="table table-bordered table-hover">

                        <tr class="success">
                            <th>Version</th>
                            <th>Date</th>
                            <th>Reviews</th>
                            <th>State</th>
                            <th>Actions</th>
                        </tr>
                        {% for aux in article %}
                        <tr>
                            <td>....</td>
                            <td>{{ aux.createAt |date("d/m/y") }}</td>
                            <td>....</td>
                            <td><span class="label label-success"> {{ aux.state }}</span></td>
                            <td>See reviews</td>
                            <td>{{ aux.inscriptions.id }}</td>

                        </tr>
                        {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}