{% extends 'base.html.twig' %}

{% block body %}

<div class="container" xmlns="http://www.w3.org/1999/html">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-image">
                        <img class="img-responsive" src="{{ conference.image }}?name={{ conference.name }}">
                        <span class="card-title">{{ conference.name }}</span>
                    </div>

                    <div class="card-content">
                        <p><strong> Summary: </strong>{{ conference.description }}</p>
                        <hr>
                        <strong>Topics: </strong>
                        {% for aux in conference.topics %}
                            <span class="label label-danger"> {{ aux.name }}</span>
                        {% endfor %}
                    </div>

                    {#<div class="card-action">#}
                        {#<a class="btn btn-default center-block"  href="{{ path('inscription',  {'slug':conference.slug}) }}"#}
                           {#role="button">Sign up</a></p>#}
                    {#</div>#}

                    {% if app.user %}

                        <div class="card-action">
                            <a class="btn btn-default center-block"  data-toggle="modal" data-target="#myModal"
                               role="button">Sign up</a></p>
                        </div>
                        {% else %}
                            <div class="card-action">
                                <a class="btn btn-default center-block"  data-toggle="modal" data-target="#Error"
                                   role="button">Sign up</a></p>
                            </div>

                    {% endif %}

                </div>
            </div>
        </div>
 </div>

    <!-- Modal -->

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h3 class="modal-title text-danger text-center" id="myModalLabel">
                        Message
                    </h3>
                </div>
                <div class="modal-body">
                    <p>El usuario con nombre  {{ app.user }} se inscribirá en el
                    congreso con el nombre {{ conference.name }}</p>
                    <br>
                    <strong class="text-danger">¿Esta de acuerdo?</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal" >No
                    </button>

                    <a role="button" class="btn btn-default" href="{{ path('a', {'slug':conference.slug}) }}">
                        Yes
                    </a>
                </div>
            </div>
        </div>
        </div>


        <!-- Modal Error -->

        <div class="modal fade" id="Error" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog ">
                    <div class="alert alert-danger">
                        <button type="button" class="close"
                                data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>

                        <a href="{{ url('fos_user_security_login') }}" class="alert-link">Para poder Apuntarse
                                        a un congreso debe estar logueado</a>
                    </div>
            </div>
        </div>


{% endblock %}
