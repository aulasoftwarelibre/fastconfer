{% extends 'base.html.twig' %}

{% block body %}


    <div class="container">
        <div class="row">
             <div class="col-md-4">
                {% if app.user %}
                    <div class="alert alert-success">
                        <a href="{{ url('fos_user_profile_show') }}" class="alert-link">El usuario {{ usuario.username }}
                            esta conectado al sistema</a>
                    </div>
                {% endif %}
             </div>
             <div class="col-md-8">
                <form name="form" action="{{ path('find') }}" method="get">
                    <div class="navbar-form navbar-right" role="search" >
                        <div class="form-group" >
                            <input type="text" class="form-control" placeholder="Search..." name="word">
                        </div>
                        <button type="submit" class="btn btn-default botones">Send</button>
                    </div>
                </form>
             </div>
        </div>

        {% for conference in conferences %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-image">
                        <img class="img-responsive" src="{{ conference.image }}?name={{ conference.name }}">
                        <span class="card-title">{{ conference.name }}</span>
                    </div>

                    <div class="card-content">
                        <p>{{ conference.description }}</p>
                    </div>

                    <div class="card-action">
                        <a class="btn btn-default" href="{{ path('showConference', {'slug':conference.slug}) }}"
                           role="button">View details &raquo;</a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <h1>No data</h1>
        {% endfor %}

    </div>




{% endblock %}