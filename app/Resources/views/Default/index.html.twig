{% extends 'base.html.twig' %}

{% block body %}


    <div class="container">
        <div class="row">
             <div class="col-md-4">

                 {% block alert %}
                     {% set flashMessage = app.session.flashbag.get('alert') %}
                     {% if flashMessage is empty %}
                         {% if app.user %}
                             <div class="alert alert-success">
                                 <a href="{{ url('fos_user_profile_show') }}" class="alert-link">The User {{ user.username }}
                                     is connected to the system</a>
                             </div>
                         {% endif %}

                         {% else %}
                             {% for  aux in flashMessage %}
                                 <div class="flash-notice alert-danger alert text-center">
                                     <strong>{{ aux }}</strong>
                                 </div>
                             {% endfor %}
                     {% endif %}
                 {% endblock %}

             </div>
             <div class="col-md-8">
                <form name="form" action="{{ path('find') }}" method="get">
                    <div class="navbar-form navbar-right" role="search" >
                        <div class="form-group" >
                            <input type="text" class="form-control" placeholder="Search..." name="search">
                        </div>
                        <button type="submit" class="btn btn-default botones" name="search-button">Send</button>
                    </div>
                </form>
             </div>
        </div>

        {% for conference in conferences %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-image">
                        <img class="img-responsive" src="{{ conference.image }}?name={{ conference.name }}">
                        <span class="card-title">{{ conference.name }}</span>
                    </div>

                    <div class="card-content">
                        <p>{{ conference.description }}</p>
                    </div>

                    <div class="card-action">
                        <a class="btn btn-default" href="{{ path('showConference', {'slug':conference.slug}) }}"
                           role="button">View details &raquo;</a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <h1>No data</h1>
        {% endfor %}

    </div>

{% endblock %}