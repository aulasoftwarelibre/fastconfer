{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% import _self as forms %}

{% macro table(object) %}
    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <th>{% trans %}Reviewer{% endtrans %}</th>
                <td>{{ object.reviewer }}</td>
            </tr>
            <tr>
                <th>{% trans %}State{% endtrans %}</th>
                <td>{{ object.state }}</td>
            </tr>
            <tr>
                <th>{% trans %}Created at{% endtrans %}</th>
                <td>{{ object.createAt | date("d/m/y") }}</td>
            </tr>
            <tr>
                <th>{% trans %}Comment to User{% endtrans %}</th>
                <td>{{ object.comment }}</td>
            </tr>
            <tr>
                <th>{% trans %}Comment to Chairman{% endtrans %}</th>
                <td>{{ object.privateComment }}</td>
            </tr>
        </tbody>
    </table>
{% endmacro %}

{% block show %}
  {{ parent() }}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h4 class="box-title">{% trans %}Reviews{% endtrans %}</h4>
        </div>
        <div class="box-body ">

            {% for articlereview in object.articleReviews %}

                <div class="row">
                    <div class="col-md-12">{% trans %}Download Article{% endtrans %}:
                        <td>
                            <a class="btn-sm btn-default glyphicon glyphicon-download-alt " href="{{ path('article_review_download',{'id': articlereview.id }) }}" role="button"></a>
                        </td>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">{% trans %}State{% endtrans %}:
                        <td>{{ articlereview.state }}</td>
                    </div>
                </div>

                {% for comment in articlereview.reviewComments %}
                    <div id="content">
                        <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                            <li><a href="#{{ loop.index }}" data-toggle="tab">{% trans %}Version {% endtrans %}{{ loop.index }}</a></li>
                        </ul>
                        <div id="my-tab-content" class="tab-content">
                            <div class="tab-pane" id="{{ loop.index }}">
                                {{ forms.table(comment) }}
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="row">
                    <div class="col-md-12">
                        <div class="btn-group">
                            <a class="btn btn-default" href="{{ path("admin_app_articlereview_accepted", {'id': object.id}) }}">{% trans %}Accept{% endtrans %}</a>
                            <a class="btn btn-default" href="{{ path("admin_app_articlereview_accepted with suggestions", {'id': object.id}) }}">{% trans %}Accept with suggerences{% endtrans %}</a>
                            <a class="btn btn-default" href="{{ path("admin_app_articlereview_rejected", {'id': object.id}) }}">{% trans %}Reject{% endtrans %}</a>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>


{% endblock %}



