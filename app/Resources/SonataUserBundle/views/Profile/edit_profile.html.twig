{% extends '::base.html.twig'  %}

{% block content %}
    {% block sonata_profile_content %}


        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="box box-default">
                    <div class="box-header">
                        <h3 class="box-title">{{ 'Profile' |trans }}</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 " align="center">
                                <img src="{{ app.user.gravatar(120)}}" class="user-image" alt="User Image"/>
                            </div>
                            <div class=" col-md-9 col-lg-9 ">

                                {{ form_errors(form) }}

                                {% form_theme form _self %}

                                <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form">
                                    {{ form_widget(form) }}

                                    <div class="box-footer" align="center">
                                        <button type="submit" name="submit"  class="btn btn-default">{{ 'Save changes'|trans }}</button>
                                        <a href="{{ path('fos_user_profile_show')}}" class="btn btn-default">{{ 'Close without saving' |trans }}</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    {% endblock %}
{% endblock %}